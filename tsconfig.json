{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "include": ["src/**/*", "tests/**/*", "webpack.config.ts"],
    "exclude": ["node_modules/*"],
    "compilerOptions": {
      "types": ["node", "svelte", "jest"],
      "baseUrl": ".",
      "outDir": "./dist",
      "paths": {
        "src": ["src/*", "tests/*"],
        "~/*": ["src/*"]
      },
      "resolveJsonModule": true,
      "ignoreDeprecations": "5.0"
    },
    "ts-node": {
      "compilerOptions": {
        "module": "commonjs"
      }
    }
  }
  